# MongoDB connection
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-host>/<db-name>?retryWrites=true&w=majority
MONGODB_DB=gakumas-share

# Discord OAuth2 (to be provided by Discord Developer Portal)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=http://localhost:8000/api/auth/discord/callback
# Discord scope (space-separated)
DISCORD_SCOPE=identify email

# OAuth/session settings
SESSION_SECRET_KEY=replace-with-random-string

# Application domains
API_BASE_URL=http://localhost:8000
WEB_APP_URL=http://localhost:5173
AUTH_SUCCESS_PATH=/auth/success
AUTH_FAILURE_PATH=/auth/error

# SuperTokens (session management)
SUPERTOKENS_CORE_URL=http://127.0.0.1:3567
SUPERTOKENS_CORE_API_KEY=
